{% extends "base-layout.njk" %}

{% block content %}
  <div id="page-container" class="page-container-ds">
    <div id="main-content" class="single-column">
      <main id="body-content">
        <h1 class="page-title">{{ title | safe }}</h1>

        <div class="card-deck card-set row">
          {%- for post in collections.mySort -%}
            <div class="card-body">
              <h5 class="card-title ">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </h5>
              <p class="card-text text-muted">{{ post.data.publishdate | dateformat }}</p>
              <p class="card-text">{{ post.data.meta | safe }}</p>
            </div>
          {%- endfor -%}
        </div>
      </main>
    </div>
  </div>
{% endblock %}
