{% extends "base-layout.njk" %}

{% block content %}
  <div id="page-container" class="page-container-ds">
    <div class="single-column">
      <main id="body-content">
        <h1 class="page-title">{{ title | safe }}</h1>

        <div class="cagov-article-list row">
          {%- for post in collections.dateSort -%}
            <!-- check if date is older than 2022 -->
            {% if (post.data.publishdate | dateyear) >= 2022 %}
            <div class="cagov-article-list-item">
            <h2 class="h3" class="cagov-mt-3">
              <a href="{{ post.url }}">{{ post.data.title | safe }}</a>
            </h2>
            <p class="text-mute">{{ post.data.publishdate | dateformat }}</p>
            <span class="blog-excerpt">{{ post.data.meta | safe }}</span>
            </div>
            {% endif %}
          {%- endfor -%}
        </div>



        <div class="wp-block-group m-t-5">
          <cagov-paginator data-paged-container="div.cagov-article-list" data-paged-block="div.cagov-article-list-item" data-per-page="5"></cagov-pagination>
        </div>


      </main>
    </div>
  </div>
{% endblock %}
